<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        Width="500" Height="450"
        MinWidth="500" MinHeight="450"
        x:Class="MLX.ErrorDialog"
        Title="Error"
        Loaded="Control_OnLoaded">
        <Grid RowDefinitions="Auto, Auto, * Auto" Margin="15" RowSpacing="15">
                <Label HorizontalAlignment="Center">Something has encountered an error.</Label>
                <Label Grid.Row="1" HorizontalAlignment="Center">The error log is below.</Label>
                <TextBox Name="ErrorLogTextBox" Grid.Row="2" VerticalAlignment="Stretch" IsReadOnly="True"></TextBox>
                <Button Grid.Row="3" HorizontalAlignment="Center" Click="Button_OnClick">Okay</Button>
        </Grid>
</Window>
